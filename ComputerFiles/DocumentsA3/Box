public class Box{
  
   private float length;
   private float width;
   private float height;
   private float volume;
   private float surfaceArea;
  
   public float calcVolume (float tempLength, float tempWidth, float tempHeight){
   length = tempLength;
   width = tempWidth;
   height = tempHeight;
   
   float volume = length*width*height;
   return volume;
  }
   public float calcSurfArea (float tempLength, float tempWidth, float tempHeight){
   length = tempLength;
   width = tempWidth;
   height = tempHeight;
   
   surfaceArea = 2*(width*length + height*length + height*width);
   return surfaceArea;
  }
}

